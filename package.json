{
  "name": "promptpad",
  "displayName": "PromptPad",
  "description": "A multiline prompt editor for Claude in Cursor and VS Code.",
  "version": "0.1.0",
  "publisher": "promptpad",
  "license": "MIT",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "AI",
    "Other"
  ],
  "keywords": [
    "cursor",
    "claude",
    "prompt",
    "ai",
    "editor"
  ],
  "activationEvents": [
    "onView:promptpad.sidebarView"
  ],
  "main": "./out/src/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "promptpad-sidebar",
          "title": "PromptPad",
          "icon": "$(edit)"
        }
      ]
    },
    "views": {
      "promptpad-sidebar": [
        {
          "type": "webview",
          "id": "promptpad.sidebarView",
          "name": "Prompt Editor"
        }
      ]
    },
    "commands": [
      {
        "command": "promptpad.open",
        "title": "PromptPad: Open"
      },
      {
        "command": "promptpad.openComposer",
        "title": "PromptPad: Open Composer"
      }
    ],
    "keybindings": [
      {
        "command": "promptpad.open",
        "key": "ctrl+alt+p",
        "mac": "cmd+alt+p"
      },
      {
        "command": "promptpad.openComposer",
        "key": "ctrl+alt+m",
        "mac": "cmd+alt+m"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -p ./ -w",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^18.19.0",
    "@types/vscode": "^1.85.0",
    "@vscode/test-electron": "^2.3.8",
    "glob": "^13.0.1",
    "mocha": "^11.7.5",
    "typescript": "^5.3.0"
  }
}
